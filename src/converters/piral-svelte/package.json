{
  "name": "piral-svelte",
  "version": "0.14.18",
  "description": "Plugin for integrating Svelte components in Piral.",
  "keywords": [
    "piral",
    "pilet-api",
    "smapiot",
    "portal",
    "modules",
    "api",
    "plugin",
    "plugin-converter",
    "svelte"
  ],
  "author": "smapiot",
  "homepage": "https://piral.io",
  "license": "MIT",
  "module": "esm/index.js",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "esm",
    "lib",
    "src",
    "convert.d.ts",
    "convert.js",
    "extend-webpack.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smapiot/piral.git"
  },
  "bugs": {
    "url": "https://github.com/smapiot/piral/issues"
  },
  "scripts": {
    "build": "yarn build:commonjs && yarn build:esnext && yarn build:convert",
    "build:convert": "tsc convert.ts --skipLibCheck --declaration",
    "build:commonjs": "tsc --project tsconfig.json --outDir lib --module commonjs",
    "build:esnext": "tsc --project tsconfig.json --outDir esm --module esnext",
    "typedoc": "typedoc --json ../../../docs/types/piral-svelte.json src --exclude \"src/**/*.test.*\"",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "devDependencies": {
    "piral-core": "^0.14.18"
  },
  "peerDependencies": {
    "piral-core": "0.14.x"
  }
}
